---
const response = await fetch('https://jsonplaceholder.typicode.com/users')

const companies = await response.json()
---

<h2 class="font-bold text-5xl my-5">Projects</h2>

{ companies.map(company =>(
    <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">    
        
        <div class="flex-1 p-4">
            
            <h2 class="font-bold text-2xl my-4">
                {company.website}
            </h2>
            
            <p class="my-2">
                {company.company.bs}
            </p>
            
            <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 mb-2">
                More info
            </button>              
        </div>

        <div class="flex-1">
            <img src="images/projects.svg" class="w-60 m-auto mb-3">
        </div>

    </div>

)) 
}

